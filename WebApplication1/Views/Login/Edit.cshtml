@model LoginDLL

<div class="row">
    <div class="col">
        <img src="~/Image/SidePic.png" class="w-auto mt-4 img-fluid" />
    </div>
    <div class="col">
        <div class="container justify-content-md-end mt-5">
            <form class="p-3 rounded bg-dark mt-4" asp-controller="Login" asp-action="Edit" method="post">
                <div class="container">
                    <div class="row">
                        <div class="col text-center">
                            <img src="~/Image/white-prof-user.png" class="w-25 text-center mb-2" />
                        </div>
                    </div>
                </div>
                <h1 class="text-center">Update Account</h1>
                <hr />

                <div class="form-group">
                    <label class="col-form-label mt-1" for="inputDefault">Username</label>
                    <input type="text" class="form-control mt-2" placeholder="Username" value="@Model.username
                           " name="username">
                    <span class="text-danger" asp-validation-for="username"></span>
                </div>
                <div class="form-group">
                    <label class="col-form-label mt-2" for="inputDefault">Password</label>
                    <input type="password" class="form-control mt-1 mb-6 pwd" placeholder="Password" value="@Model.password" name="password" />
                    <div class="container pt-1 text-end">
                        <input type="checkbox" class="btnShow" value="show"> Show Password?
                    </div>
                    <span class="text-danger" asp-validation-for="password"></span>
                </div>
                <div class="container pt-3 pb-2">
                    <div class="row">
                        <div class="col text-center">
                            <button type="submit" class="btn btn-success w-50 h-100 mb-4">
                               Update
                            </button>


                        </div>
                        <a type="nav-link" class="btn btn-link text-center mt-2" asp-controller="Login" asp-action="Login">Have an account?</a>
                    </div>

                </div>


            </form>

        </div>
    </div>
</div>