@model LoginDLL


<div class="row">
    <div class="col">
        <img src="~/Image/SidePic.png" class="w-auto mt-4 img-fluid" />
    </div>
    <div class="col">
        <div class="container justify-content-md-end">
            <form class="p-3 rounded bg-dark mt-4"  asp-controller="Login" asp-action="Register" method="post">
                <div class="container">
                    <div class="row">
                        <div class="col text-center">
                            <img src="~/Image/white-prof-user.png" class="w-25 text-center mb-2" />
                        </div>
                    </div>
                </div>
                <h1 class="text-center">Sign Up</h1>
                <hr />
                <div class="row">
                    <div class="col">
                        <div class="form-group m">
                            <label class="col-form-label mt-2" for="inputDefault">First Name</label>
                            <input type="text" class="form-control mt-2" placeholder="First Name" name="firstName" id="inputDefault" value="@Model.firstName">
                            <span class="text-danger" asp-validation-for="firstName"></span>
                        </div>
                    </div>
                    <div class="col">
                        <div class="form-group">
                            <label class="col-form-label mt-2" for="inputDefault">Last Name</label>
                            <input type="text" class="form-control mt-2" placeholder="Last Name" name="lastName" id="inputDefault" value="@Model.lastName">
                            <span class="text-danger" asp-validation-for="lastName"></span>
                        </div>
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-form-label mt-1" for="inputDefault">Username</label>
                    <input type="text" class="form-control mt-2" placeholder="Username" id="inputDefault" name="username" value="@Model.username">
                    <span class="text-danger" asp-validation-for="username"></span>
                </div>
                <div class="form-group">
                    <label class="col-form-label mt-2" for="inputDefault">Password</label>
                    <input type="password" class="form-control mt-1 pwd" placeholder="Password" id="inputDefault" name="password" value="@Model.password" />
                    <div class="container pt-1 text-end">
                        <input type="checkbox" class="btnShow" value="show"> Show Password?
                    </div>
                    <span class="text-danger" asp-validation-for="password"></span>
                </div>
                <div class="form-group">
                    <label class="col-form-label" for="inputDefault">Email</label>
                    <input type="text" class="form-control mb-6" placeholder="Email" id="inputDefault" name="email" value="@Model.email">
                    <span class="text-danger" asp-validation-for="email"></span>
                </div>

                <div class="container pt-3 pb-2">
                    <div class="row">
                        <div class="col text-center">
                            <button type="submit" class="btn btn-success w-50 h-100  mb-4">
                                Sign Up
                            </button>

                        </div>
                        <a type="nav-link" class="btn btn-link text-center mt-2" asp-controller="Login" asp-action="Login">Have an account?</a>
                    </div>
                </div>


            </form>

        </div>
    </div>
</div>
